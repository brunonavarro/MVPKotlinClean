<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.brunonavarro.cleanarqdemo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".presentation.main.view.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.auth.PassRecover.view.passRecoverActivity" />
        <activity android:name=".presentation.auth.Registro.view.RegistroActivity" />
        <activity android:name=".presentation.Productos.view.ProductoActivity" />
        <activity android:name=".presentation.auth.Login.view.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAINACTIVITY" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".base.BaseActivity" />
        <activity android:name=".presentation.main.view.MainActivity" />
    </application>

</manifest>